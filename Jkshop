<!-- CART -->
<div class="cart card">
  <h3>ðŸ›’ Cart</h3>
  <div id="cartItems"></div>
  <div class="total">Total: â‚¹<span id="total">0</span></div>
  <button class="btn" onclick="orderWhatsApp()">Order on WhatsApp</button>
</div>

<script>
let cart = {};

function addToCart(name, price){
  if(cart[name]){
    cart[name].qty++;
  }else{
    cart[name] = {price:price, qty:1};
  }
  renderCart();
}

function changeQty(name, delta){
  cart[name].qty += delta;
  if(cart[name].qty <= 0) delete cart[name];
  renderCart();
}

function renderCart(){
  let itemsDiv = document.getElementById('cartItems');
  let total = 0;
  itemsDiv.innerHTML = '';

  for(let name in cart){
    let item = cart[name];
    total += item.price * item.qty;

    itemsDiv.innerHTML += `
      <div class="cart-item">
        <span>${name} (â‚¹${item.price})</span>
        <div class="qty">
          <button onclick="changeQty('${name}',-1)">-</button>
          ${item.qty}
          <button onclick="changeQty('${name}',1)">+</button>
        </div>
      </div>`;
  }
  document.getElementById('total').innerText = total;
}

function orderWhatsApp(){
  let msg = "Order from JKSHOP:%0A";
  let total = 0;
  for(let name in cart){
    let item = cart[name];
    msg += `${name} x ${item.qty} = â‚¹${item.price*item.qty}%0A`;
    total += item.price*item.qty;
  }
  msg += `Total = â‚¹${total}`;

  window.location.href =
  "https://wa.me/919318477896?text=" + msg;
}
</script>

